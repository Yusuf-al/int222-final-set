
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<form action="/admin/add-product" style="width: 50%; margin: 20px 28%;" method="POST" enctype="multipart/form-data">
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>

  <!-- 2 column grid layout with text inputs for the first and last names -->
  <a class="btn btn-secondary btn-rounded" href="/admin/all-product">Go back to product List</a>
  <div> <br></div>
  <div class="row mb-4">
    <div class="btn btn-block mb-4">Add Your Product</div>
    <div class="col">
      <% if(message.length>0){%>
        <div style="width: 25%;
        margin: 20px; position: absolute; align-items: center;" class="alert alert-danger">
          <%= message%>
        </div>
          <%}%>
      <div class="form-outline">
      	<label class="form-label"  for="form6Example1">Brand</label>
        <input type="text" name="brand" id="form6Example1" class="form-control" />
        
      </div>
    </div>
    <div class="col">
      <div class="form-outline">
      	<label class="form-label" for="form6Example2">Model Name</label>
        <input type="text" name="model" id="form6Example2" class="form-control" />
        
      </div>
    </div>
  </div>

  <!-- Text input -->
  <div class="form-outline mb-4">
  	<label class="form-label" for="form6Example3">Price</label>
    <input type="text" name="price" id="form6Example3" class="form-control" />
    
  </div>

<!-- Text input -->
	  <div class="form-outline mb-4" >
	    <select class="form-select" name="category" aria-label="Default select example">
		  <option selected>Select Category</option>
		  <option value="bike">Bike</option>
		  <option value="mobile">Mobile</option>
		  <option value="pc">PC/Laptop</option>
		  <option value="camera">Camera</option>
		</select>
	  </div>

      <div class="form-outline mb-4">
        <label class="form-label"  for="form6Example7">Description</label>
      <textarea class="form-control" name="description" id="form6Example7" rows="4"></textarea>   
    </div>
  <!-- Photo -->
  <div class="form-outline mb-4">
  	<label class="form-label" for="customFile">Photo</label>
	<input type="file" name="imgs" class="form-control" id="customFile" multiple />
  </div>



  <!-- Specificationt -->
  <div class="form-outline mb-4">
  	<label class="form-label"  for="form6Example7">Specification</label>
    <textarea class="form-control" name="specification" id="form6Example7" rows="4"></textarea>   
  </div>

 
  <!-- Submit button -->
  <button type="submit" class="btn btn-primary btn-block mb-4">Add Product</button>
</form>

<script>
  setTimeout(function() {
  $('.alert').remove();
}, 3000);
</script>