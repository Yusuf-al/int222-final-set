    <link rel="stylesheet" type="text/css" href="/cssD/all.min.css">
    <link rel="stylesheet" type="text/css" href="/cssD/grid.css">
    <link rel="stylesheet" type="text/css" href="/cssD/style.css">       
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link src="http://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;1,100;1,300&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" integrity="sha384-AYmEC3Yw5cVb3ZcuHtOA93w35dYTsvhLPVnYs9eStHfGJvOvKxVfELGroGkvsg+p" crossorigin="anonymous">
    
    <body>
        
         <!------Navigation Start-->
         <%- include('./nav.ejs')%>
        <!--------Container Starrt-->
        <section class="container">
            <div class="bike_title">
                <div class="name_review">
                     <h3> <span><%= singleProduct.brand%></span> <span><%= singleProduct.model%></span> </h3>
                     <p><i class="fas fa-star"></i><%=singleProduct.ratingsAverage%></p>
                     <p><i class="fas fa-eye"></i>520 Reviews</p>
                </div>
            </div>
            <div class="bike_summary">
               <div class="img_section ">
                
                    <img class="front_img_dec" id="featured" src="/uploads/<%= singleProduct.imgs[0]%>" alt="">
                
                <div class="list_img">
                    
                      <img class="thumbnail active" src="/uploads/<%= singleProduct.imgs[0]%>" alt="">
                    
                    
                      <img class="thumbnail" src="/uploads/<%= singleProduct.imgs[1]%>" alt="">
                    
                    
                      <img class="thumbnail" src="/uploads/<%= singleProduct.imgs[2]%>" alt="">
                    
                    
                      <img class="thumbnail" src="/uploads/<%= singleProduct.imgs[3]%>" alt="">
                    
                    
                </div>
            </div>
            <div class="dis_section">
                    <h3>Price List</h3>
                    <table class="priceList">
                        <tr>
                            <td><%=singleProduct.price%></td>
                        </tr>
                       
                    </table>
                    <h3 class="description">Description</h3>
                         <div class="description_par">
                             <p><%=singleProduct.description%></p>
                         </div>
                    </div>
            </div>

            <div class="feature">
                <h3 style="
                text-align: center;
                padding: 20px;
            ">Key Fetures</h3>
                    <div class="keyFeature">
                        
                        <div class="keyFeatureList">
                            
                            <div class="mainKeyFeature">
                                <i class="fas fa-star"></i>
                                <p><%=singleProduct.price%></p>
                                <p class="featureTitle">Price</p>
                            </div>
                            <div class="mainKeyFeature">
                                <p><i class="fas fa-star"></i></p>
                                <p><%= obj[0] %></p>
                                <p class="featureTitle"><%=ew[0] %></p>
                            </div>
                            <div class="mainKeyFeature">
                                <p><i class="fas fa-star"></i></p>
                                <p><%= obj[1] %></p>
                                <p class="featureTitle"><%=ew[1] %></p>
                            </div>
                            <div class="mainKeyFeature">
                                <p><i class="fas fa-star"></i></p>
                                <p><%= obj[2]%></p>
                                <p class="featureTitle"><%=ew[2]%></p>
                            </div>
                            <div class="mainKeyFeature">
                                <p><i class="fas fa-star"></i></p>
                                <p><%= obj[3]%></p>
                                <p class="featureTitle"><%=ew[3]%></p>
                            </div>
                            <div class="mainKeyFeature">
                                <p><i class="fas fa-star"></i></p>
                                <p><%= obj[4]%></p>
                                <p class="featureTitle"><%=ew[4]%></p>
                            </div>
                        </div>
                    </div>
            </div>
        <div class="spece">
                <div class="specification">
                    <h4>SPECIFICATION</h4>
                </div>
                <table>
                    <tr><th colspan="2">All Fetures Of the Product</th></tr>
                    <% ew.forEach((key,i)=>{ let val = obj[i] %>
                    <tr>
                        <td><%=key%></td>
                        <td><%= val%></td>
                    </tr>

                    <%})%>
                </table>
            </div>
        </section>
        <section class="review-sec">
            <div class="review-container">
                <section class="review-left">
                  <h3 style="margin-bottom: 20px">All Reviews</h3>
                  <% for (i = 0; i < rv.length; i++) { %>
                      <div class="opc">
                    <div class="imgName">
                      <img src="/cssD/img/im1.jpg" class="personImg" alt="Profile Pic" />
                      <h4 class="personName chngName"><%= rv[i].name%> <span></span> <span><i class="fas fa-star"></i></span> <span><%= rv[i].rating%></span> </h4>
                    </div>
                    <p class="commentText">
                      <%=rv[i].review%> 
                    </p>
                  </div>
                 <% }; %> 
                  
                </section>
                <section class="review-right">
                  <h3>Review & Rating</h3>
                  <form action='/details/<%=singleProduct.slug%>' class="review-form" method="POST">
                    <input type="text" class="review-input name" name="name" placeholder="Enter Name" required/>
                    <input type="email" class="review-input email" name="email" placeholder="Enter Email" required />
                    <label for="rating">Rating (between 1 and 5)</label>
                    <input type="number" id="rating" name="rating" class="review-input" min="1" max="5">
                    <textarea
                      name="text"
                      class="input text"
                      placeholder="Your comments plz!"
                      id=""
                      cols="30"
                      rows="10"
                    ></textarea>
                    <button click="test()" class="btn post">Post Comment</button>
                  </form>
                </section>
              </div>
        </section>
        <section class="footer">
            <%- include('./footer.ejs')%>
        </section>
    </body>
    <script>
        let thumbnails = document.getElementsByClassName('thumbnail')

         let activeImages = document.getElementsByClassName('active')

         for (var i=0; i < thumbnails.length; i++){

             thumbnails[i].addEventListener('mouseover', function(){
                 
                 if (activeImages.length > 0){
                     activeImages[0].classList.remove('active')
                 }
                 

                 this.classList.add('active')
                 document.getElementById('featured').src = this.src
             })
         }
</script>
                  
                        

